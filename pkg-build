# lpf config
#
Defaults:%pkg-build !requiretty
Defaults:pkg-build rootpw,!requiretty

# Allow members of pkg-build group to run scan and build
%pkg-build ALL = (pkg-build) SETENV:NOPASSWD: /usr/share/lpf/scripts/lpf-scan
%pkg-build ALL = (pkg-build) SETENV:NOPASSWD: /usr/share/lpf/scripts/lpf-build

# Allow pkg-build user to handle yum and to kill processes
pkg-build ALL =  /usr/bin/yum, /usr/bin/yum-builddep, /usr/bin/kill
